@{
    ViewBag.Title = "人員檢視/修改";
}

<div class="content-wrapper">
    <section class="content-header" style="margin-bottom: 15px;">
        <ol class="breadcrumb">
            <li>
                <a href="/"><i class="fa fa-dashboard"></i>Home</a>
            </li>
            <li class="active">人員檢視/修改</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">人員檢視/修改</h3>
                    </div>
                    <div class="box-body">
                        <table class="table table-striped table-hover table-bordered" cellspacing="0" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th class="col-md-3">屬性</th>
                                    <th class="col-md-9">設定值</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>照片</td>
                                    <td>
                                        <input id="photoUpload" type='file' onchange="" style="display: none;"><div class="btn btn-md btn-primary" onclick="onUploadFile('#photoUpload')"><i class="fa fa-map"></i> 上傳圖示</div>
                                        <img class="img-responsive" src="#"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>使用者帳號</td>
                                    <td>007</td>
                                </tr>
                                <tr>
                                    <td>密碼</td>
                                    <td>
                                        <a href="#" data-toggle="modal" data-target="#changePasswordModal">
                                            <div class="btn btn-md btn-warning">
                                                <i class="fa fa-lock"></i> 變更密碼
                                            </div>
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>姓名</td>
                                    <td><a href="#" id="name" data-type="text" data-pk="" data-url="" data-title="輸入人員姓名">Hello</a></td>
                                </tr>
                                <tr>
                                    <td>代理人</td>
                                    <td>
                                        <a href="#" id="agent" data-name="agentId" data-type="select" data-pk="" data-url="" data-title="選擇代理人">Agent - 1</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>權限群組</td>
                                    <td>
                                        <a href="#" id="group" data-name="groupId" data-type="select" data-pk="" data-url="" data-title="選擇權限群組">Group - 1</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>E-mail</td>
                                    <td>
                                        <a href="#" id="email" data-type="text" data-pk="" data-url="" data-title="輸入E-mail">admin@localhost</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>電話</td>
                                    <td>
                                        <a href="#" id="phone" data-type="text" data-pk="" data-url="" data-title="輸入電話">110</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>啟用</td>
                                    <td>
                                        <a href="#" id="active" data-name="active" data-type="checklist" data-pk="" data-url="" data-title="啟用">1</a>
                                    </td>
                                </tr>                  
                                <tr>
                                    <td>建立日期</td>
                                    <td>2017-08-08 00:00:00</td>
                                </tr>
                                <tr>
                                    <td>最後更新日期</td>
                                    <td>2017-08-08 00:00:00</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- delete field -->
        <div class="modal modal-success" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dimdiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">刪除確認</h4>
                    </div>
                    <div class="modal-body">
                        <p id="modal-message">是否移除使用者參與此專案？</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline pull-left" data-dimdiss="modal">否</button>
                        <button id="modalYes" type="button" class="btn btn-outline" data-dimdiss="modal">是</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- change password -->
        <div class="modal modal-warning" id="changePasswordModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dimdiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">變更密碼</h4>
                    </div>
                    <div class="modal-body">
                        <div class="box-body">
                            <div id="passwordDiv" class="form-group">
                                <label for="originalPassword" class="col-md-2 control-label">原密碼</label>
                                <div class="col-md-10">
                                    <input id="originalPassword" type="password" class="form-control" name="originalPassword" placeholder="原密碼">
                                </div>
                            </div>
                            <div id="passwordDiv" class="form-group">
                                <label for="newPassword" class="col-md-2 control-label">新密碼</label>
                                <div class="col-md-10">
                                    <input id="newPassword" type="password" class="form-control" name="newPassword" placeholder="新密碼">
                                </div>
                            </div>
                            <div id="repeatPasswordDiv" class="form-group">
                                <label for="repeatPssword" class="col-md-2 control-label">重複輸入密碼</label>
                                <div class="col-md-10">
                                    <input id="repeatPassword" type="password" class="form-control" name="repeatPassword" placeholder="重複輸入密碼">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline pull-left" data-dimdiss="modal">取消</button>
                        <button id="modalYes" type="button" class="btn btn-outline" data-dimdiss="modal">確定</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script src="~/Scripts/editUser.js"></script>